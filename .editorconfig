root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 4

[LICENSE]
trim_trailing_whitespace = false

[*.{md,txt}]
trim_trailing_whitespace = false

[.gitconfig]
indent_style = tab

[*.json]
indent_style = space
indent_size = 4

[*.raml]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{js,jsx}]
indent_style = space
indent_size = 2

[*.{ts,tsx}]
